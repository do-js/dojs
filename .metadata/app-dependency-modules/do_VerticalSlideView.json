      "Design": {
        "Type": "UInteger",
        "Data": []
      }
    },
    {
      "ID": "templates",
      "Name": "显示视图对应UI模板文件",
      "Type": "Node",
      "DefaultValue": "",
      "EditType": "0",
      "Group": "",
      "Description": "可以设置一个或多个UI模板文件，值为String类型，多个模板之间分别用“,”分隔，例如：“source://view/temp/t0.ui, source://view/temp/t1.ui”",
      "Design": {
        "Type": "Richtext",
        "Data": []
